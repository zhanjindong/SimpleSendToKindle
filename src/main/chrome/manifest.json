{
	"manifest_version": 2,
	"name": "Simple Send to Kindle (by zjd.so)",
	"version": "0.0.1",
	"background": { "scripts": ["jquery-2.0.0.min.js", "background.js"] },
	"browser_action": {
		"default_icon": {
			"19": "cnblogs_19.png",
			"38": "cnblogs_38.png"
		},
		"default_title": "zjd kindle push", // shown in tooltip
		"default_popup": "popup.html"
	},
	"permissions" : ["tabs","http://localhost/","nativeMessaging"],
	"content_scripts":[{
		"matches":["*://*/*"],
		"js":["jquery-2.0.0.min.js", "content_script.js"]
	}]
}
